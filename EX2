using System;

class Program
{
    static void Main()
    {
        Console.Write("Nhap so ngay trong tuan (1 là thu hai, 2 la thu ba, etc.): ");
        int dayNumber = Convert.ToInt32(Console.ReadLine());

        switch (dayNumber)
        {
            case 1:
                Console.WriteLine("Thu hai");
                break;
            case 2:
                Console.WriteLine("Thu ba");
                break;
            case 3:
                Console.WriteLine("Thu tu");
                break;
            case 4:
                Console.WriteLine("Thu nam");
                break;
            case 5:
                Console.WriteLine("Thu sau");
                break;
            case 6:
                Console.WriteLine("Thu bay");
                break;
            case 7:
                Console.WriteLine("Chu nhat");
                break;
            default:
                Console.WriteLine("Loi: Vui lòng nhap so hop le.");
                break;
        }
    }
}
